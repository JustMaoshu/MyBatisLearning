<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatispractise.mapper.DynamicSQLMapper">
    <insert id="insertMoreByList">
        insert into t_emp values
        <foreach collection="emps" item="emp" separator=",">
            (null,#{emp.name},#{emp.age},#{emp.sex},#{emp.email},null)
        </foreach>
    </insert>
    <delete id="removeMoreByArray">
        delete from t_emp where eid in
        <!--item表示collection中的每一个元素，可以自己命名-->
        <foreach collection="eids" item="susu" separator="," open="(" close=")">
            #{susu}
        </foreach>
    </delete>

    <delete id="removeMoreByArray2">
        delete from t_emp where
        <!--分隔符前后自带空格，即使是and或or也不用手动加空格-->
        <foreach collection="eids" item="eid" separator="or">
            eid = #{eid}
        </foreach>
    </delete>

    <select id="queryEmpByCondition" resultType="org.mybatispractise.pojo.Emp">
        select * from t_emp where 1=1
        <if test="name != null and name != ''">
            and emp_name = #{name}
        </if>
        <if test="age != null and age != ''">
            and age = #{age}
        </if>
        <if test="sex != null and sex != ''">
            and sex = #{sex}
        </if>
        <if test="email!=null and email!=''">
            and email = #{email}
        </if>
    </select>
    <select id="queryEmpByCondition2" resultType="org.mybatispractise.pojo.Emp">
        select * from t_emp
        <where>
            <if test="name != null and name != ''">
                emp_name = #{name}
            </if>
            <if test="age != null and age != ''">
                and age = #{age}
            </if>
            <if test="sex != null and sex != ''">
                and sex = #{sex}
            </if>
            <if test="email!=null and email!=''">
                and email = #{email}
            </if>
        </where>
    </select>

    <select id="queryEmpByCondition3" resultType="org.mybatispractise.pojo.Emp">
        select * from t_emp
        <trim prefix="where" suffixOverrides="and|or">
            <if test="name != null and name != ''">
                emp_name = #{name} and
            </if>
            <if test="age != null and age != ''">
                age = #{age} and
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex} and
            </if>
            <if test="email!=null and email!=''">
                email = #{email}
            </if>
        </trim>
    </select>

    <select id="getEmpByChoose" resultType="org.mybatispractise.pojo.Emp">
        select * from t_emp
        <trim prefix="where">
            <choose>
                <when test="name != null and name != ''">
                    emp_name = #{name}
                </when>
                <when test="age != null and age != ''">
                    age = #{age}
                </when>
                <when test="email != null and email != ''">
                    email = #{email}
                </when>
                <otherwise>
                    did = 1
                </otherwise>
            </choose>
        </trim>
    </select>
</mapper>