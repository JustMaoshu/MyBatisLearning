<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatispractise.mapper.SelectMapper">

    <select id="queryUserByUsername" resultType="User">
        select * from user where username=#{username}
    </select>
    <select id="queryUsersByUsernames" resultType="User">
        select * from user
        <foreach collection="usernames" item="username" separator="or" open="where">
            username = #{username}
        </foreach>
    </select>

    <select id="queryAllUsers" resultType="User">
        select * from user
    </select>

    <select id="queryCount" resultType="int">
        select count(*) from user
    </select>

    <select id="queryUserByUsernameToMap" resultType="map">
        select * from user where username=#{username}
    </select>

    <select id="queryAllUsersToMap" resultType="map">
        select * from user
    </select>
    <select id="queryAllUsersToMap2" resultType="map">
        select * from user
    </select>
</mapper>